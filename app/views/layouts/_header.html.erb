<header class="navbar navbar-default navbar-fixed-top <%= yield(:header_type) %>" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to image_tag("yeti_sleeping.png"), root_path, id: "logo" %>
      <%= link_to "Review Yeti", root_path, id: "logo" %>
    </div>
    
    <div class="main-nav">
      <ul class="nav navbar-nav">
        <li><%= link_to "Home",    root_path %></li>
        <li><%= link_to "Features",features_path %></li>
        <li><%= link_to "Contact", contact_path %></li>
        <li><%= link_to "Rankings", rankings_path %></li>
        <% if signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account 
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" role="menu">
              <li><%= link_to "Profile",  profile_path %></li>
              <li><%= link_to "Settings", profile_edit_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Sign in", signin_path %></li>
          <li><%= link_to "Sign up", signup_path, class: "orange" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>